      </div>
    </div>
  </section>

  <script>
    document.getElementById('profileCard').addEventListener('click', () => {
      window.location.href = '/user/profile';
    });
    document.getElementById('EditorCard').addEventListener('click', () => {
      window.location.href = '/console/problem';
    });
    document.getElementById('BookmarkCard').addEventListener('click', () => {
      window.location.href = '/bookmarks';
    });
    document.getElementById('RoomCard').addEventListener('click', () => {
      window.location.href = '/chat';
    });
  </script>
</body>
</html>
